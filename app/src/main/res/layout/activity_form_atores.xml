<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/atoresFilme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/filmeName"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:inputType="textCapWords"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/eTNomeAtor"
            android:hint="@string/hintAtor"
            android:inputType="textCapWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/activityFormAtoresBtSalvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/saveButton"
        android:background="#488B4A" />

    <ListView
        android:id="@+id/form_Activity_Lv_Atores"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>